<launch>
  <master auto="start"/>

  <!--启动gazebo仿真基本世界-->
  <include file="$(find wpb_sim)/launch/wpb_simple.launch" />

  <!-- Run lidar filter -->
  <node pkg="slam" type="slam_lidar_filter" name="slam_lidar_filter">
    <param name="pub_topic" value="/scan"/>
  </node>


  <!-- Run the map server -->
  <arg name="map_file" default="$(find navi)/maps/display.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Map tools  -->
  <arg name="waypoint_name" default="waypoints"/>
  <node pkg="waterplus_map_tools" type="wp_manager" name="wp_manager" output="screen">
    <param name="load" type="string" value="$(find navi)/waypoints/$(arg waypoint_name).xml"/>
  </node>

  <!--- Run AMCL -->
  <!-- <include file="$(find navi)/nav_lidar/amcl_omni.launch" /> -->
  <include file="$(find navi)/param/omni_amcl.launch" />

  <!--- Run move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find navi)/nav_lidar/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find navi)/nav_lidar/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find navi)/nav_lidar/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find navi)/nav_lidar/global_costmap_params.yaml" command="load" />
    <param name="base_global_planner" value="global_planner/GlobalPlanner" />
    <param name="use_dijkstra" value="true"/>
    <param name="base_local_planner" value="wpbh_local_planner/WpbhLocalPlanner" />

    <param name= "controller_frequency" value="10" type="double"/>
  </node>

  <!-- RViz and TF tree -->
  <arg name="model" default="$(find navi)/urdf/wpb_home.urdf"/>
  <arg name="gui" default="false" />
  <arg name="rvizconfig" default="$(find navi)/rviz/nav.rviz" />

  <param name="robot_description" command="$(find xacro)/xacro.py $(arg model)" />
  <param name="use_gui" value="$(arg gui)"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true" />

</launch>
